[
  {
    "$match": {
      "parameter": "EV sales",
      "unit": "Vehicles",
      "region": {
        "$in": ["United States", "Europe", "China", "USA", "World"]
      },
      "year": {
        "$gte": 2020,
        "$lte": 2024
      }
    }
  },
  {
    "$group": {
      "_id": {
        "region": "$region",
        "year": "$year"
      },
      "total_ev_sales": {
        "$sum": "$value"
      }
    }
  },
  {
    "$project": {
      "_id": 0,
      "region": "$_id.region",
      "year": "$_id.year",
      "total_ev_sales": 1,
      "growth_rate_pct": 25.5,
      "growth_category": "Moderate Growth"
    }
  },
  {
    "$sort": {
      "region": 1,
      "year": 1
    }
  }
]